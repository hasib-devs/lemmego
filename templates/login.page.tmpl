{{template "base" .}}

{{define "content"}}
<div class="flex items-center justify-center h-screen">
  <div class="w-full max-w-md">
    <div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
      <h1 class="text-3xl font-bold text-center mb-6">Sign in to your account</h1>
      <form action="/login" method="POST">
        <div class="mb-4">
          <label for="email" class="block text-gray-700 text-sm font-bold mb-2">Email</label>
          <input type="email" name="username" id="email" placeholder="email" class="w-full p-2 border rounded" required />
          {{if and .ValidationErrors (gt (len .ValidationErrors) 0)}}
            {{range .ValidationErrors}}
              {{if eq .Key "username"}}
                <p class="text-xs text-red-500">{{.Value}}</p>
              {{end}}
            {{end}}
          {{end}}
        </div>

        <div class="mb-4">
          <label for="password" class="block text-gray-700 text-sm font-bold mb-2">Password</label>
          <input type="password" name="password" id="password" placeholder="password" class="w-full p-2 border rounded" required />
          {{if and .ValidationErrors (gt (len .ValidationErrors) 0)}}
            {{range .ValidationErrors}}
              {{if eq .Key "password"}}
                <p class="text-xs text-red-500">{{.Value}}</p>
              {{end}}
            {{end}}
          {{end}}
          <label class="block text-gray-700 text-sm mt-2">
            <a href="#" class="text-blue-500 hover:underline">Forgot password?</a>
          </label>
          {{with .Messages}}
            {{range .}}
              {{if eq .Type "error"}}
                <p class="text-xs text-red-500">{{.Body}}</p>
              {{else if eq .Type "success"}}
                <p class="text-xs text-green-500">{{.Body}}</p>
              {{else if eq .Type "warning"}}
                <p class="text-xs text-yellow-500">{{.Body}}</p>
              {{else if eq .Type "info"}}
                <p class="text-xs text-blue-500">{{.Body}}</p>
              {{else if eq .Type "debug"}}
                <p class="text-xs text-gray-500">{{.Body}}</p>
              {{end}}
            {{end}}
          {{end}}
        </div>

        <div class="mb-6">
          <button class="w-full bg-blue-500 text-white p-2 rounded">Login</button>
          <!-- Login with github -->
          <a href="/auth/github" class="w-full bg-gray-500 text-white p-2 rounded mt-2 block text-center">Login with Github</a>
        </div>
      </form>
    </div>
  </div>
</div>
{{end}}
