{{template "base" .}}

{{define "content"}}
<div class="flex items-center justify-center h-screen">
  <div class="w-full max-w-md">
    <div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
      <h1 class="text-3xl font-bold text-center mb-6">Create an account</h1>
      <form action="/register" method="POST">
        <div class="mb-4">
          <label for="first_name" class="block text-gray-700 text-sm font-bold mb-2">First Name</label>
          <input type="text" name="first_name" id="first_name" placeholder="first name" class="w-full p-2 border rounded" required />
          {{if .ValidationErrors}}
            {{range .ValidationErrors}}
              {{if eq .Key "firstName"}}
                <p class="text-xs text-red-500">{{.Value}}</p>
              {{end}}
            {{end}}
          {{end}}
        </div>

        <div class="mb-4">
          <label for="last_name" class="block text-gray-700 text-sm font-bold mb-2">Last Name</label>
          <input type="text" name="last_name" id="last_name" placeholder="last name" class="w-full p-2 border rounded" required />
          {{if .ValidationErrors}}
            {{range .ValidationErrors}}
              {{if eq .Key "lastName"}}
                <p class="text-xs text-red-500">{{.Value}}</p>
              {{end}}
            {{end}}
          {{end}}
        </div>

        <div class="mb-4">
          <label for="email" class="block text-gray-700 text-sm font-bold mb-2">Email</label>
          <input type="email" name="username" id="email" placeholder="email" class="w-full p-2 border rounded" required />
          {{if .ValidationErrors}}
            {{range .ValidationErrors}}
              {{if eq .Key "username"}}
                <p class="text-xs text-red-500">{{.Value}}</p>
              {{end}}
            {{end}}
          {{end}}
        </div>
        <div class="mb-4">
          <label for="password" class="block text-gray-700 text-sm font-bold mb-2">Password</label>
          <input type="password" name="password" id="password" placeholder="password" class="w-full p-2 border rounded" required />
          {{if .ValidationErrors}}
            {{range .ValidationErrors}}
              {{if eq .Key "password"}}
                <p class="text-xs text-red-500">{{.Value}}</p>
              {{end}}
            {{end}}
          {{end}}
        </div>

        <div class="mb-4">
          <label for="password_confirmation" class="block text-gray-700 text-sm font-bold mb-2">Confirm Password</label>
          <input type="password" name="password_confirmation" id="password_confirmation" placeholder="confirm password" class="w-full p-2 border rounded" required />
          {{if .ValidationErrors}}
            {{range .ValidationErrors}}
              {{if eq .Key "password_confirmation"}}
                <p class="text-xs text-red-500">{{.Value}}</p>
              {{end}}
            {{end}}
          {{end}}
        </div>
          {{with .Messages}}
            {{range .}}
              {{if eq .Type "error"}}
                <p class="text-xs text-red-500">{{.Body}}</p>
              {{else if eq .Type "success"}}
                <p class="text-xs text-green-500">{{.Body}}</p>
              {{else if eq .Type "warning"}}
                <p class="text-xs text-yellow-500">{{.Body}}</p>
              {{else if eq .Type "info"}}
                <p class="text-xs text-blue-500">{{.Body}}</p>
              {{else if eq .Type "debug"}}
                <p class="text-xs text-gray-500">{{.Body}}</p>
              {{end}}
            {{end}}
          {{end}}
        <div class="mb-6">
          <button class="w-full bg-blue-500 text-white p-2 rounded">Sign Up</button>
        </div>
      </form>
    </div>
  </div>
</div>
{{end}}
